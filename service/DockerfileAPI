FROM python:3.9.18-slim

# Установка зависимостей
WORKDIR /app
COPY ./pyproject.toml ./poetry.lock* ./service /app
RUN pip install --use-pep517 poetry && poetry config virtualenvs.create false && poetry install --no-dev

# Копирование остального кода приложения
COPY ./service /app
EXPOSE 9997
# Запуск приложения
CMD ["uvicorn", "main:ml_app", "--host", "0.0.0.0", "--port", "8000"]